if test "$GCC" = yes ; then
  CFLAGS=-pipe
  CXXFLAGS=-pipe
else # not GCC
  case $host_os in
    aix3.2.5)
      CFLAGS='-qchars=signed -qmaxmem=8192 -qhalt=w -qsrcmsg'
      ;;
    aix4.1)
      CFLAGS='-qchars=signed -qmaxmem=8192 -qhalt=w -qsrcmsg -qcheck=divzero'
      ;;
    aix4.2 | aix4.3)
      CFLAGS='-qmaxmem=16384 -qhalt=w -qsrcmsg -qlanglvl=extended -qlonglong'
      ;;
  esac
fi # not GCC
