AROPT = cr

# bsdi 4.0 and later is ELF
DLSUFFIX = .so
ifeq ($(host_os), bsdi2.0)
DLSUFFIX = .o
endif
ifeq ($(host_os), bsdi2.1)
DLSUFFIX = .o
endif
ifeq ($(findstring bsdi3, $(host_os)), bsdi3)
DLSUFFIX = .o
endif

ifeq ($(DLSUFFIX), .so)
CFLAGS_SL = -fpic
rpath = -Wl,-rpath,$(libdir)
export_dynamic = -export-dynamic
shlib_symbolic = -Wl,-Bsymbolic
else
CFLAGS_SL =
endif

%.so: %.o
	$(CC) -shared -o $@ $<

sqlmansect = 7
