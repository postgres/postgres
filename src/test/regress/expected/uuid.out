-- regression test for the uuid datatype
-- creating test tables
CREATE TABLE guid1
(
 	guid_field UUID,
	text_field TEXT DEFAULT(now())
);
CREATE TABLE guid2
(
 	guid_field UUID,
	text_field TEXT DEFAULT(now())
);
-- inserting invalid data tests
-- too long
INSERT INTO guid1(guid_field) VALUES('11111111-1111-1111-1111-111111111111F');
