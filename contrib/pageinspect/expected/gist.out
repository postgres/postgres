SELECT gist_page_items_bytea('aaa'::bytea);
ERROR:  invalid page size
SELECT gist_page_items('aaa'::bytea, 'test_gist_idx'::regclass);
ERROR:  invalid page size
SELECT gist_page_opaque_info('aaa'::bytea);
ERROR:  invalid page size
-- invalid special area size
