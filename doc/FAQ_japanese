    FROM tab
    WHERE lower(col) = 'abc';

   ╔╕╜редеєе╟е├епе╣д╟д╧╗╚дядьд║бвд╖длд╖д╩дмдщбвдтд╖┤╪┐Їедеєе╟е├епе╣дЄ
   ║юд├д┐д╩дщд╜дьдм╗╚дядьдыд╟д╖дчджбг
