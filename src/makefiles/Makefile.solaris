# src/makefiles/Makefile.solaris

AROPT = crs

ifeq ($(with_gnu_ld), yes)
export_dynamic = -Wl,-E
rpath = -Wl,-rpath,'$(rpathdir)'
else
rpath = -Wl,-R'$(rpathdir)'
endif

DLSUFFIX = .so


# Rule for building a shared library from a single .o file
%.so: %.o
ifeq ($(GCC), yes)
	$(CC) $(CFLAGS) $< $(LDFLAGS) $(LDFLAGS_SL) -shared -o $@
else
	$(CC) $(CFLAGS) $< $(LDFLAGS) $(LDFLAGS_SL) -G -o $@
endif

sqlmansect = 5sql
